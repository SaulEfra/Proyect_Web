rFormulario();\r\n    },\r\n    editarEmpleado(empleado) {\r\n      this.nuevoEmpleado = { ...empleado };\r\n      this.modoEdicion = true;\r\n      this.mostrarFormulario = true;\r\n    },\r\n    borrarEmpleado(id) {\r\n      if (confirm('¿Está seguro de que desea eliminar este empleado?')) {\r\n        this.empleados = this.empleados.filter(emp => emp.id !== id);\r\n      }\r\n    },\r\n    resetearFormulario() {\r\n      this.nuevoEmpleado = {\r\n        id: null,\r\n        nombre: '',\r\n        telefono: '',\r\n        cargo: '',\r\n        activo: true\r\n      };\r\n      this.mostrarFormulario = false;\r\n      this.modoEdicion = false;\r\n    },\r\n    cancelarEdicion() {\r\n      this.resetearFormulario();\r\n    }\r\n  }\r\n}\r\n</script>"],"mappings":";AA4EA,eAAe;EACbA,IAAI,EAAE,cAAc;EACpBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,iBAAiB,EAAE,KAAK;MACxBC,SAAS,EAAE,EAAE;MACbC,aAAa,EAAE;QACbC,EAAE,EAAE,IAAI;QACRC,MAAM,EAAE,EAAE;QACVC,QAAQ,EAAE,EAAE;QACZC,KAAK,EAAE,EAAE;QACTC,MAAM,EAAE;MACV,CAAC;MACDC,WAAW,EAAE;IACf;EACF,CAAC;EACDC,OAAO,EAAE;IACPC,eAAeA,CAAA,EAAG;MAChB,IAAI,IAAI,CAACF,WAAW,EAAE;QACpB,MAAMG,KAAI,GAAI,IAAI,CAACV,SAAS,CAACW,SAAS,CAACC,GAAE,IAAKA,GAAG,CAACV,EAAC,KAAM,IAAI,CAACD,aAAa,CAACC,EAAE,CAAC;QAC/E,IAAIQ,KAAI,KAAM,CAAC,CAAC,EAAE;UAChB,IAAI,CAACV,SAAS,CAACU,KAAK,IAAI;YAAE,GAAG,IAAI,CAACT;UAAc,CAAC;QACnD;MACF,OAAO;QACL,IAAI,CAACA,aAAa,CAACC,EAAC,GAAIW,IAAI,CAACC,GAAG,CAAC,CAAC,EAAE;QACpC,IAAI,CAACd,SAAS,CAACe,IAAI,CAAC;UAAE,GAAG,IAAI,CAACd;QAAc,CAAC,CAAC;MAChD;MACA,IAAI,CAACe,kBAAkB,CAAC,CAAC;IAC3B,CAAC;IACDC,cAAcA,CAACC,QAAQ,EAAE;MACvB,IAAI,CAACjB,aAAY,GAAI;QAAE,GAAGiB;MAAS,CAAC;MACpC,IAAI,CAACX,WAAU,GAAI,IAAI;MACvB,IAAI,CAACR,iBAAgB,GAAI,IAAI;IAC/B,CAAC;IACDoB,cAAcA,CAACjB,EAAE,EAAE;MACjB,IAAIkB,OAAO,CAAC,mDAAmD,CAAC,EAAE;QAChE,IAAI,CAACpB,SAAQ,GAAI,IAAI,CAACA,SAAS,CAACqB,MAAM,CAACT,GAAE,IAAKA,GAAG,CAACV,EAAC,KAAMA,EAAE,CAAC;MAC9D;IACF,CAAC;IACDc,kBAAkBA,CAAA,EAAG;MACnB,IAAI,CAACf,aAAY,GAAI;QACnBC,EAAE,EAAE,IAAI;QACRC,MAAM,EAAE,EAAE;QACVC,QAAQ,EA