\n        if (this.esAdeudo) {\r\n          this.clienteSeleccionado.Adeudos += this.cantidadAdeudoAbono;\r\n        } else {\r\n          if (this.cantidadAdeudoAbono > this.clienteSeleccionado.Adeudos) {\r\n            alert('El abono no puede ser mayor que el adeudo actual.');\r\n            return;\r\n          }\r\n          this.clienteSeleccionado.Adeudos -= this.cantidadAdeudoAbono;\r\n        }\r\n        this.actualizarCliente(this.clienteSeleccionado);\r\n        this.cerrarModal();\r\n      }\r\n    },\r\n    actualizarCliente(cliente) {\r\n      const index = this.clientes.findIndex(c => c.id === cliente.id);\r\n      if (index !== -1) {\r\n        this.$set(this.clientes, index, { ...cliente });\r\n      }\r\n    },\r\n    abrirModal() {\r\n      const modal = new bootstrap.Modal(document.getElementById('adeudoAbonoModal'));\r\n      modal.show();\r\n    },\r\n    cerrarModal() {\r\n      const modal = bootstrap.Modal.getInstance(document.getElementById('adeudoAbonoModal'));\r\n      if (modal) {\r\n        modal.hide();\r\n      }\r\n    }\r\n  }\r\n}\r\n</script>"],"mappings":";AAqGA,eAAe;EACbA,IAAI,EAAE,aAAa;EACnBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,iBAAiB,EAAE,KAAK;MACxBC,QAAQ,EAAE,EAAE;MACZC,YAAY,EAAE;QACZC,MAAM,EAAE,EAAE;QACVC,QAAQ,EAAE,EAAE;QACZC,OAAO,EAAE;MACX,CAAC;MACDC,WAAW,EAAE,KAAK;MAClBC,QAAQ,EAAE,EAAE;MACZC,mBAAmB,EAAE,IAAI;MACzBC,WAAW,EAAE,EAAE;MACfC,mBAAmB,EAAE,CAAC;MACtBC,QAAQ,EAAE;IACZ;EACF,CAAC;EACDC,QAAQ,EAAE;IACRC,iBAAiBA,CAAA,EAAG;MAClB,IAAI,IAAI,CAACN,QAAQ,EAAE;QACjB,OAAO,IAAI,CAACN,QAAQ,CAACa,MAAM,CAACC,OAAM,IAChCA,OAAO,CAACZ,MAAM,CAACa,WAAW,CAAC,CAAC,CAACC,QAAQ,CAAC,IAAI,CAACV,QAAQ,CAACS,WAAW,CAAC,CAAC,CACnE,CAAC;MACH;MACA,OAAO,IAAI,CAACf,QAAQ;IACtB;EACF,CAAC;EACDiB,OAAO,EAAE;IACPC,cAAcA,CAAA,EAAG;MACf,IAAI,IAAI,CAACb,WAAW,EAAE;QACpB,MAAMc,KAAI,GAAI,IAAI,CAACnB,QAAQ,CAACoB,SAAS,CAACC,GAAE,IAAKA,GAAG,CAACC,EAAC,KAAM,IAAI,CAACrB,YAAY,CAACqB,EAAE,CAAC;QAC7E,IAAIH,KAAI,KAAM,CAAC,CAAC,EAAE;UAChB,IAAI,CAACI,IAAI,CAAC,IAAI,CAACvB,QAAQ,EA