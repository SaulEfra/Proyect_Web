n\r\n    actualizarCliente(cliente) {\r\n      const index = this.clientes.findIndex(c => c.id === cliente.id);\r\n      if (index !== -1) {\r\n        this.$set(this.clientes, index, cliente);\r\n      }\r\n    },\r\n\r\n    abrirModal() {\r\n      const modal = new bootstrap.Modal(document.getElementById('adeudoAbonoModal'));\r\n      modal.show();\r\n    },\r\n\r\n    cerrarModal() {\r\n      const modal = bootstrap.Modal.getInstance(document.getElementById('adeudoAbonoModal'));\r\n      if (modal) {\r\n        modal.hide();\r\n      }\r\n    }\r\n  }\r\n}\r\n</script>"],"mappings":";AA2GA,eAAe;EACXA,IAAI,EAAE,aAAa;EACnBC,IAAIA,CAAA,EAAG;IACH,OAAO;MACHC,iBAAiB,EAAE,KAAK;MACxBC,QAAQ,EAAE,EAAE;MACZC,YAAY,EAAE;QACVC,MAAM,EAAE,EAAE;QACVC,QAAQ,EAAE,EAAE;QACZC,OAAO,EAAE;MACb,CAAC;MACDC,WAAW,EAAE,KAAK;MAClBC,QAAQ,EAAE,EAAE;MACZC,mBAAmB,EAAE,IAAI;MACzBC,WAAW,EAAE,EAAE;MACfC,mBAAmB,EAAE,CAAC;MACtBC,QAAQ,EAAE;IACd;EACJ,CAAC;EACDC,QAAQ,EAAE;IACNC,iBAAiBA,CAAA,EAAG;MAChB,IAAI,IAAI,CAACN,QAAQ,EAAE;QACf,OAAO,IAAI,CAACN,QAAQ,CAACa,MAAM,CAACC,OAAM,IAC9BA,OAAO,CAACZ,MAAM,CAACa,WAAW,CAAC,CAAC,CAACC,QAAQ,CAAC,IAAI,CAACV,QAAQ,CAACS,WAAW,CAAC,CAAC,CACrE,CAAC;MACL;MACA,OAAO,IAAI,CAACf,QAAQ;IACxB;EACJ,CAAC;EACDiB,OAAO,EAAE;IACLC,cAAcA,CAAA,EAAG;MACb,IAAI,IAAI,CAACb,WAAW,EAAE;QAClB,MAAMc,KAAI,GAAI,IAAI,CAACnB,QAAQ,CAACoB,SAAS,CAACC,GAAE,IAAKA,GAAG,CAACC,EAAC,KAAM,IAAI,CAACrB,YAAY,CAACqB,EAAE,CAAC;QAC7E,IAAIH,KAAI,KAAM,CAAC,CAAC,EAAE;UACd,IAAI,CAACnB,QAAQ,CAACmB,KAAK,IAAI;YAAE,GAAG,IAAI,CAAClB;UAAa,CAAC;QACnD;MACJ,OAAO;QACH,MAAMsB,OAAM,GAAIC,IAAI,CAACC,GAAG,CAAC,CAAC,CAACC,QAAQ,CAAC,CAAC;QACrC,IAAI,CAAC1B,QAAQ,CAAC2B,IAAI,CAAC;UAAE,GAAG,IAAI,CAAC1B,YAAY;UAAEqB,EAAE,EAAEC;QAAQ,CAAC,CAAC;MAC7D;MACA,IAAI,CAACK,kBAAkB,CAAC,CAAC;IAC7B,CAAC;IACDC,aAAaA,CAACf,OAAO,EAAE;MACnB,IAAI,CAACb,YAAW,GAAI;QAAE,GAAGa;MAAQ,CAAC;MAClC,IAAI,CAACT,WAAU,GAAI,IAAI;MACvB,IAAI,CAACN,iBAAgB,GAAI,IAAI;IACjC,CAAC;IACD+B,aAAaA,CAACR,EAAE,EAAE;MACd,IAAIS,OAAO,CAAC,kDAAkD,CAAC,EAAE;QAC7D,IAAI,CAAC/B,QAAO,GAAI,IAAI,CAAC