{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport { ref, computed } from 'vue';\nexport default {\n  name: 'ClientesApp',\n  setup() {\n    const clientes = ref([]);\n    const busqueda = ref('');\n    const mostrarFormulario = ref(false);\n    const modoEdicion = ref(false);\n    const clienteActual = ref({\n      id: null,\n      nombre: '',\n      telefono: '',\n      adeudos: 0\n    });\n    const mostrarModal = ref(false);\n    const esAdeudo = ref(true);\n    const cantidadAdeudoAbono = ref(0);\n    const clienteSeleccionado = ref(null);\n    const clientesFiltrados = computed(() => {\n      return clientes.value.filter(cliente => cliente.nombre.toLowerCase().includes(busqueda.value.toLowerCase()));\n    });\n    function mostrarFormularioAgregar() {\n      clienteActual.value = {\n        id: null,\n        nombre: '',\n        telefono: '',\n        adeudos: 0\n      };\n      modoEdicion.value = false;\n      mostrarFormulario.value = true;\n    }\n    function editarCliente(cliente) {\n      clienteActual.value = {\n        ...cliente\n      };\n      modoEdicion.value = true;\n      mostrarFormulario.value = true;\n    }\n    function guardarCliente() {\n      if (modoEdicion.value) {\n        const index = clientes.value.findIndex(c => c.id === clienteActual.value.id);\n        if (index !== -1) {\n          clientes.value[index] = {\n            ...clienteActual.value\n          };\n        }\n      } else {\n        const nuevoId = Date.now().toString();\n        clientes.value.push({\n          ...clienteActual.value,\n          id: nuevoId\n        });\n      }\n      mostrarFormulario.value = false;\n    }\n    function cancelarEdicion() {\n      mostrarFormulario.value = false;\n    }\n    function borrarCliente(id) {\n      if (confirm('¿Está seguro de que desea eliminar este cliente?')) {\n        clientes.value = clientes.value.filter(c => c.id !== id);\n      }\n    }\n    function abrirModalAdeudo(cliente) {\n      clienteSeleccionado.value = cliente;\n      esAdeudo.value = true;\n      cantidadAdeudoAbono.value = 0;\n      mostrarModal.value = true;\n    }\n    function abrirModalAbono(cliente) {\n      clienteSeleccionado.value = cliente;\n      esAdeudo.value = false;\n      cantidadAdeudoAbono.value = 0;\n      mostrarModal.value = true;\n    }\n    function procesarAdeudoAbono() {\n      if (clienteSeleccionado.value) {\n        if (esAdeudo.value) {\n          clienteSeleccionado.value.adeudos += cantidadAdeudoAbono.value;\n        } else {\n          if (cantidadAdeudoAbono.value > clienteSeleccionado.value.adeudos) {\n            alert('El abono no puede ser mayor que el adeudo actual.');\n            return;\n          }\n          clienteSeleccionado.value.adeudos -= cantidadAdeudoAbono.value;\n        }\n        cerrarModal();\n      }\n    }\n    function cerrarModal() {\n      mostrarModal.value = false;\n    }\n    return {\n      clientes,\n      busqueda,\n      mostrarFormulario,\n      modoEdicion,\n      clienteActual,\n      mostrarModal,\n      esAdeudo,\n      cantidadAdeudoAbono,\n      clientesFiltrados,\n      mostrarFormularioAgregar,\n      editarCliente,\n      guardarCliente,\n      cancelarEdicion,\n      borrarCliente,\n      abrirModalAdeudo,\n      abrirModalAbono,\n      procesarAdeudoAbono,\n      cerrarModal\n    };\n  }\n};","map":{"version":3,"names":["ref","computed","name","setup","clientes","busqueda","mostrarFormulario","modoEdicion","clienteActual","id","nombre","telefono","adeudos","mostrarModal","esAdeudo","cantidadAdeudoAbono","clienteSeleccionado","clientesFiltrados","value","filter","cliente","toLowerCase","includes","mostrarFormularioAgregar","editarCliente","guardarCliente","index","findIndex","c","nuevoId","Date","now","toString","push","cancelarEdicion","borrarCliente","confirm","abrirModalAdeudo","abrirModalAbono","procesarAdeudoAbono","alert","cerrarModal"],"sources":["C:\\Users\\R\\Documents\\Tareas 9cuatri\\Proyecto\\Proyect_Web\\src\\components\\ClientesTreinta.vue"],"sourcesContent":["<template>\r\n    <div class=\"container\">\r\n      <h1>Clientes</h1>\r\n      \r\n      <!-- Formulario de búsqueda -->\r\n      <div class=\"mb-3\">\r\n        <input v-model=\"busqueda\" class=\"form-control\" placeholder=\"Buscar cliente\">\r\n      </div>\r\n  \r\n      <!-- Tabla de clientes -->\r\n      <table class=\"table\">\r\n        <thead>\r\n          <tr>\r\n            <th>Nombre</th>\r\n            <th>Teléfono</th>\r\n            <th>Adeudos</th>\r\n            <th>Acciones</th>\r\n          </tr>\r\n        </thead>\r\n        <tbody>\r\n          <tr v-for=\"cliente in clientesFiltrados\" :key=\"cliente.id\">\r\n            <td>{{ cliente.nombre }}</td>\r\n            <td>{{ cliente.telefono }}</td>\r\n            <td>{{ cliente.adeudos }}</td>\r\n            <td>\r\n              <button @click=\"editarCliente(cliente)\" class=\"btn btn-sm btn-primary me-1\">Editar</button>\r\n              <button @click=\"borrarCliente(cliente.id)\" class=\"btn btn-sm btn-danger me-1\">Eliminar</button>\r\n              <button @click=\"abrirModalAdeudo(cliente)\" class=\"btn btn-sm btn-info me-1\">Adeudo</button>\r\n              <button @click=\"abrirModalAbono(cliente)\" class=\"btn btn-sm btn-success\">Abono</button>\r\n            </td>\r\n          </tr>\r\n        </tbody>\r\n      </table>\r\n  \r\n      <!-- Formulario para agregar/editar cliente -->\r\n      <div v-if=\"mostrarFormulario\" class=\"mt-3\">\r\n        <h2>{{ modoEdicion ? 'Editar' : 'Agregar' }} Cliente</h2>\r\n        <form @submit.prevent=\"guardarCliente\">\r\n          <div class=\"mb-3\">\r\n            <input v-model=\"clienteActual.nombre\" class=\"form-control\" placeholder=\"Nombre\" required>\r\n          </div>\r\n          <div class=\"mb-3\">\r\n            <input v-model=\"clienteActual.telefono\" class=\"form-control\" placeholder=\"Teléfono\" required>\r\n          </div>\r\n          <div class=\"mb-3\">\r\n            <input v-model.number=\"clienteActual.adeudos\" type=\"number\" class=\"form-control\" placeholder=\"Adeudos\" required>\r\n          </div>\r\n          <button type=\"submit\" class=\"btn btn-primary\">{{ modoEdicion ? 'Actualizar' : 'Agregar' }}</button>\r\n          <button @click=\"cancelarEdicion\" type=\"button\" class=\"btn btn-secondary ms-2\">Cancelar</button>\r\n        </form>\r\n      </div>\r\n  \r\n      <!-- Botón para mostrar formulario de agregar cliente -->\r\n      <button v-if=\"!mostrarFormulario\" @click=\"mostrarFormularioAgregar\" class=\"btn btn-primary mt-3\">Agregar Cliente</button>\r\n  \r\n      <!-- Modal para Adeudos y Abonos -->\r\n      <div v-if=\"mostrarModal\" class=\"modal d-block\" tabindex=\"-1\">\r\n        <div class=\"modal-dialog\">\r\n          <div class=\"modal-content\">\r\n            <div class=\"modal-header\">\r\n              <h5 class=\"modal-title\">{{ esAdeudo ? 'Añadir Adeudo' : 'Añadir Abono' }}</h5>\r\n              <button type=\"button\" class=\"btn-close\" @click=\"cerrarModal\"></button>\r\n            </div>\r\n            <div class=\"modal-body\">\r\n              <form @submit.prevent=\"procesarAdeudoAbono\">\r\n                <div class=\"mb-3\">\r\n                  <label class=\"form-label\">Cantidad</label>\r\n                  <input v-model.number=\"cantidadAdeudoAbono\" type=\"number\" class=\"form-control\" required>\r\n                </div>\r\n                <button type=\"submit\" class=\"btn btn-primary\">Confirmar</button>\r\n              </form>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n      <div v-if=\"mostrarModal\" class=\"modal-backdrop fade show\"></div>\r\n    </div>\r\n  </template>\r\n  \r\n  <script>\r\n  import { ref, computed } from 'vue'\r\n  \r\n  export default {\r\n    name: 'ClientesApp',\r\n    setup() {\r\n      const clientes = ref([])\r\n      const busqueda = ref('')\r\n      const mostrarFormulario = ref(false)\r\n      const modoEdicion = ref(false)\r\n      const clienteActual = ref({ id: null, nombre: '', telefono: '', adeudos: 0 })\r\n      const mostrarModal = ref(false)\r\n      const esAdeudo = ref(true)\r\n      const cantidadAdeudoAbono = ref(0)\r\n      const clienteSeleccionado = ref(null)\r\n  \r\n      const clientesFiltrados = computed(() => {\r\n        return clientes.value.filter(cliente => \r\n          cliente.nombre.toLowerCase().includes(busqueda.value.toLowerCase())\r\n        )\r\n      })\r\n  \r\n      function mostrarFormularioAgregar() {\r\n        clienteActual.value = { id: null, nombre: '', telefono: '', adeudos: 0 }\r\n        modoEdicion.value = false\r\n        mostrarFormulario.value = true\r\n      }\r\n  \r\n      function editarCliente(cliente) {\r\n        clienteActual.value = { ...cliente }\r\n        modoEdicion.value = true\r\n        mostrarFormulario.value = true\r\n      }\r\n  \r\n      function guardarCliente() {\r\n        if (modoEdicion.value) {\r\n          const index = clientes.value.findIndex(c => c.id === clienteActual.value.id)\r\n          if (index !== -1) {\r\n            clientes.value[index] = { ...clienteActual.value }\r\n          }\r\n        } else {\r\n          const nuevoId = Date.now().toString()\r\n          clientes.value.push({ ...clienteActual.value, id: nuevoId })\r\n        }\r\n        mostrarFormulario.value = false\r\n      }\r\n  \r\n      function cancelarEdicion() {\r\n        mostrarFormulario.value = false\r\n      }\r\n  \r\n      function borrarCliente(id) {\r\n        if (confirm('¿Está seguro de que desea eliminar este cliente?')) {\r\n          clientes.value = clientes.value.filter(c => c.id !== id)\r\n        }\r\n      }\r\n  \r\n      function abrirModalAdeudo(cliente) {\r\n        clienteSeleccionado.value = cliente\r\n        esAdeudo.value = true\r\n        cantidadAdeudoAbono.value = 0\r\n        mostrarModal.value = true\r\n      }\r\n  \r\n      function abrirModalAbono(cliente) {\r\n        clienteSeleccionado.value = cliente\r\n        esAdeudo.value = false\r\n        cantidadAdeudoAbono.value = 0\r\n        mostrarModal.value = true\r\n      }\r\n  \r\n      function procesarAdeudoAbono() {\r\n        if (clienteSeleccionado.value) {\r\n          if (esAdeudo.value) {\r\n            clienteSeleccionado.value.adeudos += cantidadAdeudoAbono.value\r\n          } else {\r\n            if (cantidadAdeudoAbono.value > clienteSeleccionado.value.adeudos) {\r\n              alert('El abono no puede ser mayor que el adeudo actual.')\r\n              return\r\n            }\r\n            clienteSeleccionado.value.adeudos -= cantidadAdeudoAbono.value\r\n          }\r\n          cerrarModal()\r\n        }\r\n      }\r\n  \r\n      function cerrarModal() {\r\n        mostrarModal.value = false\r\n      }\r\n  \r\n      return {\r\n        clientes,\r\n        busqueda,\r\n        mostrarFormulario,\r\n        modoEdicion,\r\n        clienteActual,\r\n        mostrarModal,\r\n        esAdeudo,\r\n        cantidadAdeudoAbono,\r\n        clientesFiltrados,\r\n        mostrarFormularioAgregar,\r\n        editarCliente,\r\n        guardarCliente,\r\n        cancelarEdicion,\r\n        borrarCliente,\r\n        abrirModalAdeudo,\r\n        abrirModalAbono,\r\n        procesarAdeudoAbono,\r\n        cerrarModal\r\n      }\r\n    }\r\n  }\r\n  </script>\r\n"],"mappings":";AAgFE,SAASA,GAAG,EAAEC,QAAO,QAAS,KAAI;AAElC,eAAe;EACbC,IAAI,EAAE,aAAa;EACnBC,KAAKA,CAAA,EAAG;IACN,MAAMC,QAAO,GAAIJ,GAAG,CAAC,EAAE;IACvB,MAAMK,QAAO,GAAIL,GAAG,CAAC,EAAE;IACvB,MAAMM,iBAAgB,GAAIN,GAAG,CAAC,KAAK;IACnC,MAAMO,WAAU,GAAIP,GAAG,CAAC,KAAK;IAC7B,MAAMQ,aAAY,GAAIR,GAAG,CAAC;MAAES,EAAE,EAAE,IAAI;MAAEC,MAAM,EAAE,EAAE;MAAEC,QAAQ,EAAE,EAAE;MAAEC,OAAO,EAAE;IAAE,CAAC;IAC5E,MAAMC,YAAW,GAAIb,GAAG,CAAC,KAAK;IAC9B,MAAMc,QAAO,GAAId,GAAG,CAAC,IAAI;IACzB,MAAMe,mBAAkB,GAAIf,GAAG,CAAC,CAAC;IACjC,MAAMgB,mBAAkB,GAAIhB,GAAG,CAAC,IAAI;IAEpC,MAAMiB,iBAAgB,GAAIhB,QAAQ,CAAC,MAAM;MACvC,OAAOG,QAAQ,CAACc,