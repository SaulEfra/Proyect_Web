{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from 'axios';\nexport default {\n  name: 'NuevaVenta',\n  data() {\n    return {\n      products: [],\n      searchQuery: '',\n      cart: [],\n      currentSection: 'pagada',\n      selectedPaymentMethod: '',\n      saleName: '',\n      saleDate: '',\n      clientName: ''\n    };\n  },\n  computed: {\n    filteredProducts() {\n      if (this.searchQuery.trim() === '') {\n        return this.products;\n      }\n      return this.products.filter(product => product.Nombre.toLowerCase().includes(this.searchQuery.toLowerCase()));\n    },\n    totalPrice() {\n      return this.cart.reduce((total, item) => total + item.PrecioVenta * item.Cantidad, 0).toFixed(2);\n    }\n  },\n  methods: {\n    async fetchProducts() {\n      try {\n        const response = await axios.get('http://localhost:3000/Producto');\n        this.products = response.data.results;\n      } catch (error) {\n        console.error('Error al obtener productos:', error);\n      }\n    },\n    searchProduct() {\n      // La búsqueda ya se maneja a través de la propiedad computada\n    },\n    addProductToCart(product) {\n      const cartItem = this.cart.find(item => item.IDProducto === product.IDProducto);\n      if (cartItem) {\n        cartItem.Cantidad++;\n      } else {\n        this.cart.push({\n          ...product,\n          Cantidad: 1\n        });\n      }\n    },\n    removeFromCart(product) {\n      this.cart = this.cart.filter(item => item.IDProducto !== product.IDProducto);\n    },\n    clearCart() {\n      this.cart = [];\n    },\n    prepareConfirmation() {\n      // Preparar cualquier acción necesaria antes de mostrar el offcanvas\n    },\n    async confirmProduct() {\n      try {\n        await axios.post('http://localhost:3000/confirmarVenta', {\n          cart: this.cart,\n          total: this.totalPrice,\n          saleName: this.saleName,\n          saleDate: this.saleDate,\n          clientName: this.clientName,\n          paymentMethod: this.selectedPaymentMethod\n        });\n        console.log('Venta confirmada');\n        this.clearCart();\n        this.saleName = '';\n        this.saleDate = '';\n        this.clientName = '';\n      } catch (error) {\n        console.error('Error al confirmar venta:', error);\n      }\n    },\n    updateQuantity(product, amount) {\n      const cartItem = this.cart.find(item => item.IDProducto === product.IDProducto);\n      if (cartItem) {\n        cartItem.Cantidad += amount;\n        if (cartItem.Cantidad <= 0) {\n          this.removeFromCart(cartItem);\n        }\n      }\n    },\n    showSection(section) {\n      this.currentSection = section;\n    }\n  },\n  mounted() {\n    this.fetchProducts();\n  }\n};","map":{"version":3,"names":["axios","name","data","products","searchQuery","cart","currentSection","selectedPaymentMethod","saleName","saleDate","clientName","computed","filteredProducts","trim","filter","product","Nombre","toLowerCase","includes","totalPrice","reduce","total","item","PrecioVenta","Cantidad","toFixed","methods","fetchProducts","response","get","results","error","console","searchProduct","addProductToCart","cartItem","find","IDProducto","push","removeFromCart","clearCart","prepareConfirmation","confirmProduct","post","paymentMethod","log","updateQuantity","amount","showSection","section","mounted"],"sources":["D:\\Vers_Git_Proyecto\\Proyect_Web\\src\\components\\NuevaVenta.vue"],"sourcesContent":["<template>\r\n  <div class=\"container-fluid text-bg-light p-3\">\r\n    <div class=\"row\">\r\n      <!-- Sección de búsqueda y productos -->\r\n      <div class=\"col-lg-8 col-md-12 mb-4\">\r\n        <!-- Navbar para búsqueda -->\r\n        <nav class=\"navbar navbar-expand-lg bg-body-tertiary nav2\">\r\n          <div class=\"container-fluid\">\r\n            <form class=\"d-flex\" @submit.prevent=\"searchProduct\">\r\n              <input class=\"form-control me-2\" v-model=\"searchQuery\" type=\"search\" placeholder=\"Buscar Producto\" aria-label=\"Buscar\">\r\n              <button class=\"btn btn-outline-success\" type=\"submit\" style=\"color: blue; border-color: blue;\">Buscar</button>\r\n            </form>\r\n          </div>\r\n        </nav>\r\n        \r\n        <!-- Tarjetas de productos -->\r\n        <div class=\"row mt-3\">\r\n          <div class=\"col-lg-12\">\r\n            <div class=\"card card1\" v-for=\"product in filteredProducts\" :key=\"product.IDProducto\" style=\"width: 100%;\">\r\n              <img :src=\"'data:image/jpeg;base64,' + product.Datos\" class=\"card-img-top\" alt=\"Product Image\" style=\"border-radius: 10px;\">\r\n              <div class=\"card-body\">\r\n                <h5 class=\"card-title\">{{ product.Nombre }}</h5>\r\n                <p class=\"card-text\">{{ product.Descripcion }}</p>\r\n                <h5>{{ product.PrecioVenta }}</h5>\r\n                <button class=\"btn btn-primary\" type=\"button\" @click=\"addProductToCart(product)\">Agregar Producto</button>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n\r\n      <!-- Sección de Canasta -->\r\n      <div class=\"col-lg-4 col-md-12\">\r\n        <div class=\"card canasta-card\">\r\n          <div class=\"card-header d-flex justify-content-between align-items-center\">\r\n            <h5 class=\"mb-0\">Canasta</h5>\r\n            <button class=\"btn btn-secondary btn-sm\" @click=\"clearCart\">Vaciar</button>\r\n          </div>\r\n          <div class=\"card-body\">\r\n            <div v-for=\"item in cart\" :key=\"item.IDProducto\" class=\"mb-3\">\r\n              <div class=\"d-flex justify-content-between align-items-center\">\r\n                <div>\r\n                  <h6>{{ item.Nombre }}</h6>\r\n                  <small>{{ item.Cantidad }} x {{ item.PrecioVenta }}</small>\r\n                  <div class=\"mt-2\">\r\n                    <button class=\"btn btn-sm btn-secondary\" @click=\"updateQuantity(item, -1)\" :disabled=\"item.Cantidad <= 1\">-</button>\r\n                    <button class=\"btn btn-sm btn-secondary\" @click=\"updateQuantity(item, 1)\">+</button>\r\n                  </div>\r\n                </div>\r\n                <button class=\"btn btn-danger btn-sm\" @click=\"removeFromCart(item)\">Eliminar</button>\r\n              </div>\r\n            </div>\r\n            <div class=\"form-group mt-3\">\r\n              <label for=\"total\">Total</label>\r\n              <input type=\"text\" class=\"form-control\" id=\"total\" :value=\"totalPrice\" readonly>\r\n            </div>\r\n            <button class=\"btn btn-primary mt-3\" data-bs-toggle=\"offcanvas\" href=\"#offcanvasRight\" role=\"button\" aria-controls=\"offcanvasRight\" @click=\"prepareConfirmation\">Confirmar Producto</button>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- Offcanvas -->\r\n    <div class=\"offcanvas offcanvas-end\" tabindex=\"-1\" id=\"offcanvasRight\" aria-labelledby=\"offcanvasRightLabel\">\r\n      <div class=\"offcanvas-header\">\r\n        <h5 id=\"offcanvasRightLabel\">Confirmación de la venta</h5>\r\n        <button type=\"button\" class=\"btn-close\" data-bs-dismiss=\"offcanvas\" aria-label=\"Close\"></button>\r\n      </div>\r\n      <div class=\"offcanvas-body\">\r\n        <div v-if=\"currentSection === 'pagada' || currentSection === 'credito'\">\r\n          <div class=\"mb-3\">\r\n            <label for=\"ventaNombre\">Dale nombre a esta venta</label>\r\n            <input type=\"text\" id=\"ventaNombre\" v-model=\"saleName\" class=\"form-control\" />\r\n          </div>\r\n          <div class=\"mb-3\">\r\n            <label for=\"ventaFecha\">Fecha de la venta</label>\r\n            <input type=\"date\" id=\"ventaFecha\" v-model=\"saleDate\" class=\"form-control\" />\r\n          </div>\r\n          <div class=\"mb-3\">\r\n            <label for=\"cliente\">Agrega un cliente a la venta (opcional)</label>\r\n            <input type=\"text\" id=\"cliente\" v-model=\"clientName\" class=\"form-control\" />\r\n          </div>\r\n          <div class=\"d-flex mb-3\">\r\n            <button @click=\"showSection('pagada')\" :class=\"{ active: currentSection === 'pagada' }\" class=\"btn btn-outline-secondary flex-fill me-2\">Efectivo<i class=\"bi bi-cash\"></i></button>\r\n            <button @click=\"showSection('credito')\" :class=\"{ active: currentSection === 'credito' }\" class=\"btn btn-outline-secondary flex-fill\">Tarjeta<i class=\"bi bi-credit-card\"></i></button>\r\n          </div>\r\n          <div class=\"mb-3\">\r\n            <button type=\"button\" class=\"btn btn-primary\" @click=\"confirmProduct\">Confirmar venta</button>\r\n          </div>\r\n        </div>\r\n        <div class=\"total-section mt-3\">\r\n          <h5>Total de la venta: {{ totalPrice }}</h5>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios';\r\n\r\nexport default {\r\n  name: 'NuevaVenta',\r\n  data() {\r\n    return {\r\n      products: [],\r\n      searchQuery: '',\r\n      cart: [],\r\n      currentSection: 'pagada',\r\n      selectedPaymentMethod: '',\r\n      saleName: '',\r\n      saleDate: '',\r\n      clientName: ''\r\n    };\r\n  },\r\n  computed: {\r\n    filteredProducts() {\r\n      if (this.searchQuery.trim() === '') {\r\n        return this.products;\r\n      }\r\n      return this.products.filter(product =>\r\n        product.Nombre.toLowerCase().includes(this.searchQuery.toLowerCase())\r\n      );\r\n    },\r\n    totalPrice() {\r\n      return this.cart.reduce((total, item) => total + (item.PrecioVenta * item.Cantidad), 0).toFixed(2);\r\n    }\r\n  },\r\n  methods: {\r\n    async fetchProducts() {\r\n      try {\r\n        const response = await axios.get('http://localhost:3000/Producto');\r\n        this.products = response.data.results;\r\n      } catch (error) {\r\n        console.error('Error al obtener productos:', error);\r\n      }\r\n    },\r\n    searchProduct() {\r\n      // La búsqueda ya se maneja a través de la propiedad computada\r\n    },\r\n    addProductToCart(product) {\r\n      const cartItem = this.cart.find(item => item.IDProducto === product.IDProducto);\r\n      if (cartItem) {\r\n        cartItem.Cantidad++;\r\n      } else {\r\n        this.cart.push({ ...product, Cantidad: 1 });\r\n      }\r\n    },\r\n    removeFromCart(product) {\r\n      this.cart = this.cart.filter(item => item.IDProducto !== product.IDProducto);\r\n    },\r\n    clearCart() {\r\n      this.cart = [];\r\n    },\r\n    prepareConfirmation() {\r\n      // Preparar cualquier acción necesaria antes de mostrar el offcanvas\r\n    },\r\n    async confirmProduct() {\r\n      try {\r\n        await axios.post('http://localhost:3000/confirmarVenta', {\r\n          cart: this.cart,\r\n          total: this.totalPrice,\r\n          saleName: this.saleName,\r\n          saleDate: this.saleDate,\r\n          clientName: this.clientName,\r\n          paymentMethod: this.selectedPaymentMethod\r\n        });\r\n        console.log('Venta confirmada');\r\n        this.clearCart();\r\n        this.saleName = '';\r\n        this.saleDate = '';\r\n        this.clientName = '';\r\n      } catch (error) {\r\n        console.error('Error al confirmar venta:', error);\r\n      }\r\n    },\r\n    updateQuantity(product, amount) {\r\n      const cartItem = this.cart.find(item => item.IDProducto === product.IDProducto);\r\n      if (cartItem) {\r\n        cartItem.Cantidad += amount;\r\n        if (cartItem.Cantidad <= 0) {\r\n          this.removeFromCart(cartItem);\r\n        }\r\n      }\r\n    },\r\n    showSection(section) {\r\n      this.currentSection = section;\r\n    }\r\n  },\r\n  mounted() {\r\n    this.fetchProducts();\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.card1 {\r\n  margin-bottom: 20px;\r\n  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);\r\n  border-radius: 10px;\r\n}\r\n\r\n.card1 img {\r\n  height: 200px;\r\n  object-fit: cover;\r\n  border-radius: 10px;\r\n}\r\n\r\n.canasta-card {\r\n  width: 100%;\r\n}\r\n\r\n.offcanvas-header {\r\n  font-size: 20px;\r\n  font-weight: bold;\r\n}\r\n\r\n.offcanvas-body label {\r\n  display: block;\r\n  margin-bottom: 10px;\r\n  font-weight: bold;\r\n}\r\n\r\n.offcanvas-body input[type=\"date\"],\r\n.offcanvas-body input[type=\"text\"] {\r\n  width: 100%;\r\n  padding: 10px;\r\n  margin-bottom: 10px;\r\n  border-radius: 5px;\r\n  border: 1px solid #ccc;\r\n}\r\n\r\n.offcanvas-body .btn-outline-secondary {\r\n  border: 1px solid #ccc;\r\n}\r\n\r\n.offcanvas-body .btn-primary {\r\n  width: 100%;\r\n  padding: 10px;\r\n  font-size: 16px;\r\n  border-radius: 5px;\r\n}\r\n\r\n.tab-buttons {\r\n  display: flex;\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.tab-buttons button {\r\n  flex: 1;\r\n  margin-right: 10px;\r\n  border-radius: 5px;\r\n}\r\n\r\n.tab-buttons button:last-child {\r\n  margin-right: 0;\r\n}\r\n\r\n.tab-buttons button.active {\r\n  background-color: #007bff;\r\n  color: white;\r\n  border-color: #007bff;\r\n}\r\n</style>\r\n"],"mappings":";AAmGA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAI,EAAE,YAAY;EAClBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,EAAE;MACZC,WAAW,EAAE,EAAE;MACfC,IAAI,EAAE,EAAE;MACRC,cAAc,EAAE,QAAQ;MACxBC,qBAAqB,EAAE,EAAE;MACzBC,QAAQ,EAAE,EAAE;MACZC,QAAQ,EAAE,EAAE;MACZC,UAAU,EAAE;IACd,CAAC;EACH,CAAC;EACDC,QAAQ,EAAE;IACRC,gBAAgBA,CAAA,EAAG;MACjB,IAAI,IAAI,CAACR,WAAW,CAACS,IAAI,CAAC,MAAM,EAAE,EAAE;QAClC,OAAO,IAAI,CAACV,QAAQ;MACtB;MACA,OAAO,IAAI,CAACA,QAAQ,CAACW,MAAM,CAACC,OAAM,IAChCA,OAAO,CAACC,MAAM,CAACC,WAAW,CAAC,CAAC,CAACC,QAAQ,CAAC,IAAI,CAACd,WAAW,CAACa,WAAW,CAAC,CAAC,CACtE,CAAC;IACH,CAAC;IACDE,UAAUA,CAAA,EAAG;MACX,OAAO,IAAI,CAACd,IAAI,CAACe,MAAM,CAAC,CAACC,KAAK,EAAEC,IAAI,KAAKD,KAAI,GAAKC,IAAI,CAACC,WAAU,GAAID,IAAI,CAACE,QAAS,EAAE,CAAC,CAAC,CAACC,OAAO,CAAC,CAAC,CAAC;IACpG;EACF,CAAC;EACDC,OAAO,EAAE;IACP,MAAMC,aAAaA,CAAA,EAAG;MACpB,IAAI;QACF,MAAMC,QAAO,GAAI,MAAM5B,KAAK,CAAC6B,GA